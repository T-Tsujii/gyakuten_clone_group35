<h1>LINE</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">タイトル</th>
      <th scope="col">内容</th>
    </tr>
  </thead>
  <tbody>
    <% @lines.each.with_index(1) do |line, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= line.title %></td>
        <td>
          <%= link_to "詳細", line %>
          <%= link_to "編集", edit_line_path(line) %>
          <%= link_to "削除", line, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>